<br /><br /><br /><br /><br />
<div class="wrapper author">
    <h1>{{author}}</h1>

    <div class="product-row display-grid grid-cols-4">
        {{#each bookList}}
        <div class="product-card display-flex flex-column">
            <h4>{{title}}</h4>
            {{#if image}}
            <img src="/images/{{image}}" class="m-auto" />
            {{/if}}
            <button class="btn addToCart" data-id="{{id}}" data-name="{{title}}" data-price="{{price}}" onclick="addToCart(event)">add to
                cart</button>
        </div>

        {{/each}}
    </div>
</div>

